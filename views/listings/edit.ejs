<% layout('/layouts/boilerplate') -%>

<div class="container my-5">
  <div class="card shadow-sm rounded-3">
    <div class="card-body p-5">
      <h2 class="text-center mb-4">Edit Your Listing</h2>

      <form
        action="/listing/<%= editable_data._id %>?_method=PUT"
        method="POST"
        class="row g-3 needs-validation"
        enctype="multipart/form-data"
        novalidate
      >
        <!-- Title -->
        <div class="mb-0">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="listing[title]"
            value="<%= editable_data.title %>"
            required
          />
          <div class="invalid-feedback">Valid Title</div>
        </div>

        <!-- Description -->
        <div class="mb-0">
          <label for="description" class="form-label">Description</label>
          <textarea
            class="form-control"
            id="description"
            name="listing[description]"
            rows="3"
            required
            minlength="50"
          ><%= editable_data.description %></textarea>
          <div class="invalid-feedback">
            Description must be at least 50 characters long.
          </div>
        </div>

        <!-- Old Image Preview -->
        <div style="margin: 0; padding: 20px; background: #f8f9fa">
          <small for="img">Last Uploaded image</small>
          <div
            style="
              width: 300px;
              height: 200px;
              border-radius: 8px;
              overflow: hidden;
              box-shadow: 0 2px 8px rgba(0, 0, 0, 0.12);
              transition: transform 0.2s ease;
            "
            onmouseover="this.style.transform='scale(1.02)'"
            onmouseout="this.style.transform='scale(1)'"
          >
            <img
              src="<%=orginialimage%>"
              alt="Room Image"
              style="width: 100%; height: 100%; object-fit: cover;"
            />
          </div>
        </div>

        <!-- Upload New Image -->
        <div class="mb-0">
          <label for="image" class="form-label">Upload New Image</label>
          <input
            type="file"
            class="form-control"
            id="image"
            name="listing[image]"
          />
        </div>

        <!-- Price, Country & Phone Number -->
        <div class="row g-3 mb-0">
          <div class="col-12 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input
              type="number"
              class="form-control"
              id="price"
              name="listing[price]"
              value="<%= editable_data.price %>"
              required
            />
          </div>

          <div class="col-12 col-md-4">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              class="form-control"
              id="country"
              name="listing[country]"
              value="<%= editable_data.country %>"
              required
            />
          </div>

          <!-- â­ Added Phone Number -->
          <div class="col-12 col-md-4">
            <label for="phoneNumber" class="form-label">Phone Number</label>
            <input
              type="text"
              class="form-control"
              id="phoneNumber"
              name="listing[phoneNumber]"
              value="<%= editable_data.phoneNumber %>"
              required
              minlength="10"
              maxlength="15"
            />
            <div class="invalid-feedback">Please enter a valid phone number</div>
          </div>
        </div>

        <!-- Location -->
        <div class="mb-0">
          <label for="location" class="form-label">Location</label>
          <input
            type="text"
            class="form-control"
            id="location"
            name="listing[address]"
            value="<%= editable_data.address %>"
            required
          />
        </div>

        <!-- SubCategory -->
        <div class="mb-3">
          <label for="subCategory" class="form-label">Room Category</label>
          <select
            class="form-select"
            id="subCategory"
            name="listing[subCategory]"
            required
          >
            <option value="<%= editable_data.subCategory %>" selected>
              Your Previous Category: <%= editable_data.subCategory %>
            </option>

            <optgroup label="Student Categories">
              <option value="Shared Room">Shared Room</option>
              <option value="Single Room">Single Room</option>
              <option value="Dormitory">Dormitory</option>
              <option value="Studio Room">Studio Room</option>
              <option value="PG">PG (Paying Guest)</option>
            </optgroup>

            <optgroup label="Working Professional Categories">
              <option value="Private Single Room">Private Single Room</option>
              <option value="Co-living Room">Co-living Room</option>
              <option value="1 BHK Apartment">1 BHK Apartment</option>
              <option value="Shared Apartment">Shared Apartment</option>
              <option value="Service Apartment">Service Apartment</option>
            </optgroup>

            <optgroup label="Universal Categories">
              <option value="Budget Room">Budget Room</option>
              <option value="Standard Room">Standard Room</option>
              <option value="Premium Room">Premium Room</option>
            </optgroup>
          </select>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-dark w-100">Update</button>
      </form>
    </div>
  </div>
</div>
