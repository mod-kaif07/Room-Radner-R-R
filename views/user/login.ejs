<% layout('/layouts/boilerplate') -%>

<div class="login_container">
  <div class="login_card">
    <!-- Geometric Pattern Header -->
    <div class="login_header">
      <div class="login_geometric_pattern"></div>
      <div class="login_logo">
        <img src="images/mainlogo.png" alt="Website Logo" />
      </div>
    </div>

    <!-- Form Section -->
    <div class="login_form_section">
      <h2 class="login_title">Login</h2>

      <form
        class="login_form needs-validation"
        novalidate
        method="post"
        action="/login"
      >
        <!-- Email -->
        <div class="login_field">
          <label for="username" class="login_label">Username</label>
          <input
            type="text"
            class="login_input"
            id="username"
            name="username"
            placeholder="username"
            required
          />
          <div class="login_error">Please enter your email.</div>
        </div>

        <!-- Password -->
        <div class="login_field">
          <label for="password" class="login_label">Password</label>
          <input
            type="password"
            class="login_input"
            id="password"
            name="password"
            placeholder="Password"
            required
            minlength="6"
          />
          <div class="login_error">Please enter your password.</div>
        </div>

        <button type="submit" class="login_button">Login</button>

        <div class="login_footer">
          <span class="login_footer_text">Don't have an account?</span>
          <a href="/register" class="login_footer_link">Sign Up</a>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Validation Script -->
<script>
  (() => {
    "use strict";
    const forms = document.querySelectorAll(".needs-validation");
    Array.from(forms).forEach((form) => {
      form.addEventListener(
        "submit",
        (event) => {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add("was-validated");
        },
        false
      );
    });
  })();
</script>
